    <declare-styleable name="ViewfinderView">
        <attr name="corner_color" format="color"/>
        <attr name="laser_color" format="color"/>
        <attr name="frame_color" format="color" />
        <attr name="mask_color" format="color" />
        <attr name="result_color" format="color" />
        <attr name="label_text_color" format="color"/>
        <attr name="label_text" format="string"/>
        <attr name="label_text_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="BLPasswordEditView">
        <attr name="pwdHint" format="string|reference"/>
        <attr name="pwdHeftImg" format="reference"/>
        <attr name="pwdTextSize" format="dimension"/>
        <attr name="pwdTextMaxLen" format="integer"/>
        <attr name="pwdTextColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="BLInputTextView">
        <attr name="paddingLeft"  format="dimension"/>
        <attr name="hint" />
        <attr name="light" />
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="textMaxLen" />
        <attr name="background" />
        <attr name="isPwdType" />
        <attr name="textColorHint" />
