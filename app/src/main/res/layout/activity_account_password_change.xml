<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/line_gray_bg" />


    <cn.com.broadlink.blappsdkdemo.view.BLPasswordEditView
        android:id="@+id/old_password_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        app:pwdHint="@string/str_input_old_password"
        android:background="#fff"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/line_gray_bg" />

    <cn.com.broadlink.blappsdkdemo.view.BLPasswordEditView
        android:id="@+id/new_password_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        app:pwdHint="@string/str_input_new_password"
        android:background="#fff"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/line_gray_bg" />

    <cn.com.broadlink.blappsdkdemo.view.BLPasswordEditView
        android:id="@+id/new_password_again_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        app:pwdHint="@string/str_input_new_password_again"
        android:background="#fff"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray_bg" />

</LinearLayout>