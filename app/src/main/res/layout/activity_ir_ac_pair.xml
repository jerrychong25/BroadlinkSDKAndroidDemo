<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <EditText
        android:id="@+id/et_input"
        android:padding="5dp"
        android:layout_below="@+id/rv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideOverlay"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_input_view_blue_bg"
        android:textColor="@color/textDark"
        android:minHeight="200dp"
        android:gravity="start"
        android:textSize="12sp"
        android:digits="abcdefABCDEF0123456789 "
        android:scrollbars="vertical"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/bt_on_key_rec"
        style="@style/commonBtn"
        android:text="One Key Recognize"/>

    <Button
        android:id="@+id/bt_download_script"
        style="@style/commonBtn"
        android:text="Download IR Script"/>

    <Button
        android:id="@+id/bt_get_script_info"
        style="@style/commonBtn"
        android:text="Get IR Script content"/>
    
    <Button
        android:id="@+id/bt_get_ir_code"
        style="@style/commonBtn"
        android:text="Generate IR Code"/>

    <EditText
        android:id="@+id/et_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:gravity="top|left"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_input_view_blue_bg"
        android:minHeight="200dp"
        android:padding="10dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:textColor="@color/textDark"/>

</LinearLayout>
</ScrollView>